/* --- ESTILOS AGREGADOS PARA ALINEAR CONTADOR Y BOTÓN --- */

.contenedor-descarga {
    /* Esto es lo que pone los elementos internos (.contador y .boton-descarga) uno al lado del otro */
    display: flex; 
    
    /* Centra los elementos verticalmente para que el contador y el botón estén alineados */
    align-items: center; 
    
    /* Agrega un poco de espacio debajo de cada grupo de descarga */
    margin-bottom: 15px; 
}

/* Da un poco de espacio entre el contador (la flecha + el número) y el botón */
.contador {
    margin-right: 10px; 
    /* El botón se llama .boton-descarga, no .btn */
}
/* Tu botón es un <a> con la clase .boton-descarga, así que no necesitas el estilo .btn */
.boton-descarga{
    display:inline-block;
    background:#2563eb;
    color:#fff;
    padding:10px 14px;
    border-radius:8px;
    text-decoration:none
}
